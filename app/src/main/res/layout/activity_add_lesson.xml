<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/tvOrdinary"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Date"/>

        <EditText
            android:id="@+id/edt_setDate"
            style="@style/edtOrdinary"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/btn_setDate"
            style="@style/btnOrdinary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выбрать дату"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/tvOrdinary"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Time"/>

        <EditText
            android:id="@+id/edt_setTime"
            style="@style/edtOrdinary"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/btn_setTime"
            style="@style/btnOrdinary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выбрать время "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/tvOrdinary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Название урока"/>

        <EditText
            android:id="@+id/edt_setLessonTitle"
            style="@style/edtSignUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"/>

        <TextView
            style="@style/tvOrdinary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Описание урока"/>

        <EditText
            android:id="@+id/edt_setLessonDescription"
            style="@style/edtSignUp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/btn_submit_add_lesson"
            style="@style/btnAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Сохранить урок"/>

    </LinearLayout>
</LinearLayout>