<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                style="@style/tvSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Введите наименование предмета"/>

            <EditText
                android:id="@+id/edtLessonListUpdate"
                style="@style/edtSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_add_lesson"
                style="@style/btnAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавить предмет"/>

        </LinearLayout>
    </LinearLayout>

    <fragment
        android:id="@+id/frLessonList"
        android:name="com.example.admin.studentmanager.fragment.LessonListFragmentActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/activity_lesson_list"/>

</LinearLayout>